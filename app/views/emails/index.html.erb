<p id="notice"><%= notice %></p>

<h1>Emails</h1>

<table>
  <thead>
    <tr>
      <th><%= link_to 'New Email', new_email_path %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
</table>


<table>
  <thead>
    <tr>
      <th>Object</th>
      <!-- <th>Body</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emails.each do |email| %>
      <tr>
        <!-- <td><%= email.body %></td> -->
        <td><%= link_to(email) do%><%=email.object%><%end%></td>
        <!-- <td><%= link_to 'Edit', edit_email_path(email) %></td> -->
        <td><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="viewer">
      <b style="padding-left:10px;">What's it say ?</b>
      <div id="email-display" style="display:none;"></div>
    </div>
</div>


