<div class="row clearfix">
<% if email.read? %>
  <div class="read">
    <%= link_to "Mark un-read", read_email_path(email, email.id), method: :patch %>
  </div>
  <div class="email">
    <p style="opacity: 0.4;"><strike><%= link_to(email) do%><%=email.object%><%end%></strike></p>
  </div>
  <div class="trash">
    <%= link_to 'Delete', email, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% else %>
    <div class="read">
        <%= link_to "Mark un-read", read_email_path(email, email.id), method: :patch %>
    </div>
    <div class="email">
        <p><%= link_to(email) do%><%=email.object%><%end%></p>
    </div>
    <div class="trash">
        <%= link_to 'Delete', email, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
<% end %>
</div>